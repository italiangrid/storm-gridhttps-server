<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<filter>
		<filter-name>WebDAVAuthorizationFilter</filter-name>
		<filter-class>it.grid.storm.gridhttps.webapp.webdav.WebDAVFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>WebDAVServiceRoot</filter-name>
		<filter-class>it.grid.storm.gridhttps.webapp.webdav.WebDAVRootFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>FileTransferAuthorizationFilter</filter-name>
		<filter-class>it.grid.storm.gridhttps.webapp.filetransfer.FileTransferFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>WebdavSpringMiltonFilter</filter-name>
		<filter-class>it.grid.storm.gridhttps.webapp.webdav.WebdavSpringMiltonFilter</filter-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>webdavApplicationContext.xml</param-value>
		</init-param>
		<init-param>
            <param-name>milton.exclude.paths</param-name>    
            <param-value>/static,/templates</param-value>
        </init-param>
	</filter>
	
	<filter>
		<filter-name>FileTransferSpringMiltonFilter</filter-name>
		<filter-class>it.grid.storm.gridhttps.webapp.filetransfer.FileTransferSpringMiltonFilter</filter-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>fileTransferApplicationContext.xml</param-value>
		</init-param>
		<init-param>
            <param-name>milton.exclude.paths</param-name>    
            <param-value>/static,/templates</param-value>
        </init-param>
	</filter>

	<filter-mapping>
		<filter-name>WebDAVAuthorizationFilter</filter-name>
		<url-pattern>/webdav/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>WebDAVServiceRoot</filter-name>
		<url-pattern>/webdav/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>WebdavSpringMiltonFilter</filter-name>
		<url-pattern>/webdav/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>FileTransferAuthorizationFilter</filter-name>
		<url-pattern>/fileTransfer/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>FileTransferSpringMiltonFilter</filter-name>
		<url-pattern>/fileTransfer/*</url-pattern>
	</filter-mapping>

</web-app>
