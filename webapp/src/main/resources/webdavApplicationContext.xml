<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="resource.factory" class="it.grid.storm.gridhttps.webapp.webdav.factory.StormResourceFactory" />

	<bean id="webdav-extra.property" class="it.grid.storm.gridhttps.webapp.webdav.factory.StormPropertySource" />

	<bean id="webdav-mainfilter" class="it.grid.storm.gridhttps.webapp.webdav.StormStandardFilter" />

	<bean id="milton.http.manager" class="io.milton.config.HttpManagerBuilder">
		<property name="mainResourceFactory" ref="resource.factory" />
		<property name="defaultStandardFilter" ref="webdav-mainfilter" />
		<property name="enableBasicAuth" value="false" />
		<property name="enableFormAuth" value="false" />
		<property name="enableCookieAuth" value="false" />
		<property name="enableCompression" value="false" />
		<property name="enableExpectContinue" value="false" />
		<!-- enableCompression may be true...? -->
		<property name="extraPropertySources">
			<list>
				<ref bean="webdav-extra.property" />
			</list>
		</property>
		<property name="enabledJson" value="false" />
	</bean>

</beans>