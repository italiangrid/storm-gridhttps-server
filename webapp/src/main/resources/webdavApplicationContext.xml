<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
		http://www.springframework.org/schema/mvc 
		http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<mvc:resources mapping="/favicon.ico" location="WEB-INF/images/favicon.ico" />

	<bean id="milton.fs.resource.factory" class="it.grid.storm.webdav.factory.StormResourceFactory" />

	<bean id="webdav-fs-webapp.extra.property" class="it.grid.storm.webdav.factory.StormPropertySource" />

	<bean id="webdav-mainfilter" class="it.grid.storm.webdav.StormStandardFilter" />

	<bean id="milton.http.manager" class="io.milton.config.HttpManagerBuilder">
		<property name="mainResourceFactory" ref="milton.fs.resource.factory" />
		<property name="defaultStandardFilter" ref="webdav-mainfilter" />
		<property name="enableBasicAuth" value="false" />
		<property name="enableFormAuth" value="false" />
		<property name="enableCookieAuth" value="false" />
		<property name="enableCompression" value="false" />
		<!-- enableCompression may be true...? -->
		<property name="extraPropertySources">
			<list>
				<ref bean="webdav-fs-webapp.extra.property" />
			</list>
		</property>
		<property name="enabledJson" value="false" />
	</bean>

</beans>
