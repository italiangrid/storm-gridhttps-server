<configuration>

	<appender name="PROCESS" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${storm.log.dir}/storm-gridhttps-server.log</file>
		<ImmediateFlush>true</ImmediateFlush>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${storm.log.dir}/storm-gridhttps-server-%d{yyyy-MM-dd}.log.gz</FileNamePattern>
            <MaxHistory>60</MaxHistory>
        </rollingPolicy>

        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date{HH:mm:ss.SSS} [%.-16thread] %highlight(%-5level) %msg%n</Pattern>
        </layout>
	</appender>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
		</layout>
	</appender>

	<appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.err</target>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
		</layout>
	</appender>
	
	<logger name="io.milton" level="WARN">
		<appender-ref ref="PROCESS" />
	</logger>

	<logger name="it.grid.storm" level="INFO">
		<appender-ref ref="PROCESS" />
	</logger>

	<logger name="system.out" additivity="false">
		<level value="ALL" />
		<appender-ref ref="STDOUT" />
	</logger>
                     
	<logger name="system.err" additivity="false">
		<level value="ALL" />
		<appender-ref ref="STDERR" />
	</logger>

<!-- 	<root level="ERROR"> -->
<!-- 	    <appender-ref ref="PROCESS" /> -->
<!-- 	</root> -->

</configuration>
