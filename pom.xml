<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>it.grid.storm</groupId>
	<artifactId>storm-gridhttps-server</artifactId>
	<version>2.0.0</version>
	<packaging>pom</packaging>

	<developers>
		<developer>
			<name>Enrico Vianello</name>
			<organization>INFN CNAF</organization>
			<roles>
				<role>Software Engineer</role>
			</roles>
			<organizationUrl>http://www.cnaf.infn.it/</organizationUrl>
			<email>enrico.vianello@cnaf.infn.it</email>
		</developer>
		<developer>
			<name>Michele Dibenedetto</name>
			<organization>INFN CNAF</organization>
			<roles>
				<role>Software Engineer</role>
			</roles>
			<organizationUrl>http://www.cnaf.infn.it/</organizationUrl>
			<email>michele.dibenedetto@cnaf.infn.it</email>
		</developer>
	</developers>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

		<logbackVersion>1.0.6</logbackVersion>
		<slf4jVersion>1.6.6</slf4jVersion>
		<miltonVersion>2.2.0</miltonVersion>
		<springVersion>3.1.2.RELEASE</springVersion>
		<trustmanagerVersion>3.0.5</trustmanagerVersion>
		<commonsIOVersion>1.4</commonsIOVersion>
		<commonsLangVersion>2.3</commonsLangVersion>
		<httpcoreVersion>4.2.2</httpcoreVersion>
		<httpclientVersion>4.2.1</httpclientVersion>
		<apibackendVersion>0.0.15-SNAPSHOT</apibackendVersion>
		<httpsutilsVersion>0.5-SNAPSHOT</httpsutilsVersion>
		<javaxServletVersion>3.0.0.v201112011016</javaxServletVersion>
		<mavenCompilerVersion>2.5.1</mavenCompilerVersion>
		<springcontextVersion>2.0.5</springcontextVersion>

		<conf_installation_prefix>/etc/storm</conf_installation_prefix>
		<module_name>gridhttps-server</module_name>
		<log_installation_directory>/var/log/storm</log_installation_directory>
		<jar_installation_prefix>/usr/share/java</jar_installation_prefix>
		<work_installation_directory>/var/lib/storm</work_installation_directory>
		<doc_installation_prefix>/usr/share/doc</doc_installation_prefix>
		<local_repository_dir>/tmp/m2-repository</local_repository_dir>
	</properties>

	<modules>
		<module>server</module>
		<module>webapp</module>
		<module>storagearea</module>
		<module>assembler</module>
	</modules>

	<build>
		<plugins>
			<plugin>
				<inherited>false</inherited>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.3</version>
				<extensions>true</extensions>
				<executions>
					<execution>
						<id>make-assembly-source</id>
						<phase>process-sources</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<finalName>${project.artifactId}-${project.version}</finalName>
							<descriptors>
								<descriptor>assembly/build-source-tarball.xml</descriptor>
							</descriptors>
							<tarLongFileMode>gnu</tarLongFileMode>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<inherited>false</inherited>
				<groupId>net.rumati.maven.plugins</groupId>
				<artifactId>velocity-maven-plugin</artifactId>
				<version>0.1.2</version>
				<executions>
					<execution>
						<id>bin-spec</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>velocity</goal>
						</goals>
						<configuration>
							<outputFile>${project.build.directory}/spec/storm-gridhttps-server.spec</outputFile>
							<template>src/spec/storm-gridhttps-server.spec.velocity</template>
							<properties>
								<ModuleName>${module_name}</ModuleName>
								<PackageName>${project.artifactId}</PackageName>
								<PackageVersion>${project.version}</PackageVersion>
								<PackageRelease>${release}</PackageRelease>
								<JavaHome>${java.home}</JavaHome>
								<MavenSettings>${maven_settings}</MavenSettings>
								<MavenLocalRepository>-Dmaven.repo.local=${local_repository_dir}</MavenLocalRepository>
								<MavenProfile>${project.activeProfiles[0].id}</MavenProfile>
								<ConfDir>${conf_installation_prefix}</ConfDir>
								<LogDir>${log_installation_directory}</LogDir>
								<WorkDir>${work_installation_directory}</WorkDir>
							</properties>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>storagearea</artifactId>
				<version>${project.version}</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>server</artifactId>
				<version>${project.version}</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>webapp</artifactId>
				<version>${project.version}</version>
				<type>war</type>
				<scope>compile</scope>
			</dependency>
			<!-- logging libraries: logback -->
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-api</artifactId>
				<version>${slf4jVersion}</version>
			</dependency>
			<dependency>
				<groupId>ch.qos.logback</groupId>
				<artifactId>logback-classic</artifactId>
				<version>${logbackVersion}</version>
			</dependency>
			<dependency>
				<groupId>ch.qos.logback</groupId>
				<artifactId>logback-core</artifactId>
				<version>${logbackVersion}</version>
			</dependency>
			<dependency>
				<groupId>org.italiangrid</groupId>
				<artifactId>https-utils</artifactId>
				<version>${httpsutilsVersion}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.httpcomponents</groupId>
				<artifactId>httpcore</artifactId>
				<version>${httpcoreVersion}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.httpcomponents</groupId>
				<artifactId>httpclient</artifactId>
				<version>${httpclientVersion}</version>
			</dependency>
			<dependency>
				<groupId>org.eclipse.jetty.orbit</groupId>
				<artifactId>javax.servlet</artifactId>
				<version>${javaxServletVersion}</version>
			</dependency>

			<dependency>
				<groupId>com.googlecode.json-simple</groupId>
				<artifactId>json-simple</artifactId>
				<version>1.1.1</version>
			</dependency>

		</dependencies>
	</dependencyManagement>

	<profiles>
		<profile>
			<id>sl5</id>
			<activation>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>!maven_settings</name>
				</property>
			</activation>
			<properties>
				<maven_settings>-s settings.xml</maven_settings>
			</properties>
		</profile>
		<profile>
			<id>sl6</id>
			<activation>
				<property>
					<name>!maven_settings</name>
				</property>
			</activation>
			<properties>
				<maven_settings>-s settings.xml</maven_settings>
			</properties>
		</profile>
	</profiles>

</project>
